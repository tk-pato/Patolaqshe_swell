/* STEP2: COMMITMENTのホバー効果を無効化（同一ページに誘導のため視覚アフォーダンスを減らす） */
#reasons .ptl-pageNavHero__btn { transition: none; }
#reasons .ptl-pageNavHero__btn:hover,
#reasons .ptl-pageNavHero__btn:active { transform: none; box-shadow: 0 10px 26px rgba(0,0,0,.12); border-color: rgba(0,0,0,.08); }
.ptl-news__list.is-titleOnly { max-width: 980px; margin: 0 auto; }
.ptl-news__list.is-titleOnly .ptl-news__item { padding: 18px 0; border-bottom: 1px solid #e5e5e5; }
.ptl-news__title { text-decoration: none; font-weight: 700; letter-spacing: .01em; }
.ptl-news__title { color: #5F6368; }
.ptl-news__title:hover,
.ptl-news__title:focus-visible { color: #3C4043; }
.ptl-news__more { display: flex; justify-content: center; margin-top: 28px; }
.ptl-news__moreBtn, .ptl-reasons__more {
    /* 調整用カスタムプロパティ（必要に応じて数値だけ変えればOK） */
    --frame-slice: 120; /* 画像から切り出す縁の厚み(px) */
    --frame-width: 12px; /* 実際の表示上の枠の太さ（小さめ） */
    --frame-color: #111; /* 枠の色（ホバーで白に切替） */

    /* ホバー時にも寸法が変わらないように、余計な固定寸法を外す */
    box-sizing: border-box; /* 枠とパディングを寸法に含める */

    display: inline-grid;
    grid-auto-flow: column;
    place-items: center; /* 中央寄せ（縦横） */
    gap: 10px;
    text-decoration: none;
    color: #3C4043; /* 通常は少し濃いグレー */
    background: #fff;
    letter-spacing: .08em;
    font-weight: 600; /* NEWS見出しと統一 */
    padding: 6px 14px; /* 文字に近いサイズ感へ（従来比 ~70%） */
    white-space: nowrap; /* 改行を防ぎ、サイズの安定化 */
    position: relative; /* 疑似要素フレームの基準 */
    border: none; /* レイアウトに影響を与えない */

    /* お知らせ（サブタイトル）と完全連動 */
    font-size: var(--ptl-subtitle-size);

    transition: background-color .2s ease, color .2s ease;
}
.ptl-news__moreBtn::before, .ptl-reasons__more::before {
    content: "";
    position: absolute;
    /* 枠を外側に描画し、要素サイズを変えない */
    inset: calc(var(--frame-width) * -1);
    pointer-events: none; /* クリック透過 */
    background: var(--frame-color);
    /* マスクでフレーム形状を切り抜き、色だけ差し替える */
    -webkit-mask: url('./img/bg_frame_bk.png') center/100% 100% no-repeat;
    mask: url('./img/bg_frame_bk.png') center/100% 100% no-repeat;
}
.ptl-news__moreArrow { display: inline-block; transform: translateX(0); transition: transform .2s ease; }

/* ホバーは文字色のみ変更（背景・枠は不変） */
.ptl-news__moreBtn:hover,
.ptl-news__moreBtn:focus-visible,
.ptl-reasons__more:hover,
.ptl-reasons__more:focus-visible { background: #fff; color: #5F6368; }
.ptl-news__moreBtn:hover .ptl-news__moreArrow,
.ptl-news__moreBtn:focus-visible .ptl-news__moreArrow { transform: translateX(4px); }

/* SERVICE NAV - 背景動画＋アイコンカード */
/* 旧: 画像差し替えによる枠変更は廃止（マスク方式へ） */
.ptl-serviceNav { position: relative; }
.ptl-serviceNav__bg { position: absolute; inset: 0; overflow: hidden; z-index: 0; }
.ptl-serviceNav__video { width: 100%; height: 100%; object-fit: cover; filter: brightness(.6); }
.ptl-serviceNav__overlay { position: absolute; inset: 0; background: rgba(0,0,0,.25); }
.ptl-serviceNav .ptl-section__inner { position: relative; z-index: 1; }
.ptl-serviceNav__grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: clamp(16px, 2vw, 24px); margin-top: 20px; }
@media (min-width: 900px) { .ptl-serviceNav__grid { grid-template-columns: repeat(4, 1fr); } }
.ptl-serviceNav__card { display: grid; place-items: center; text-align: center; background: rgba(255,255,255,.95); border-radius: 8px; padding: clamp(20px, 3vw, 32px); text-decoration: none; color: inherit; box-shadow: 0 6px 24px rgba(0,0,0,.12); transition: transform .25s ease, box-shadow .25s ease, background-color .25s ease; }
.ptl-serviceNav__icon { font-size: clamp(28px, 4.5vw, 44px); margin-bottom: 12px; display: inline-flex; align-items: center; justify-content: center; width: 1em; height: 1em; }
.ptl-serviceNav__label { font-weight: 600; letter-spacing: .02em; }
.ptl-serviceNav__card:hover { transform: translateY(-3px); box-shadow: 0 14px 32px rgba(0,0,0,.18); }
.ptl-serviceNav__card:active { transform: translateY(-1px); }

/* アイコンの“動き”サンプル: 小さく跳ねて回転 -> 好みで差し替え可 */
.ptl-serviceNav__card:hover .ptl-serviceNav__icon { animation: ptlIconPop .5s ease both; }
@keyframes ptlIconPop {
    0% { transform: scale(1) rotate(0); }
    40% { transform: scale(1.15) rotate(-8deg); }
    70% { transform: scale(0.98) rotate(6deg); }
    100% { transform: scale(1) rotate(0); }
}

/* STORE NAV */
.ptl-storeNav .ptl-section__title { font-size: var(--ptl-heading-size); line-height: 1.2; }
.ptl-storeNav__grid { display: grid; grid-template-columns: repeat(1, 1fr); gap: 16px; }
@media (min-width: 700px) { .ptl-storeNav__grid { grid-template-columns: repeat(2, 1fr); } }
.ptl-storeNav__card { display: block; text-decoration: none; color: inherit; background: #fff; border: 1px solid rgba(0,0,0,.06); border-radius: 8px; padding: 18px; box-shadow: 0 4px 16px rgba(0,0,0,.06); transition: transform .2s ease, box-shadow .2s ease; }
