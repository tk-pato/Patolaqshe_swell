.ptl-reasons.is-navstyle .ptl-pageNavHero__btn { padding: clamp(20px, 2.6vw, 32px) clamp(16px, 2.2vw, 24px); min-height: 170px; }
/* 画像高さをカスタマイズしたい場合は変数で調整可能 */
.ptl-reasons.is-navstyle .ptl-pageNavHero__photo img { height: var(--reasons-photo-h, clamp(120px, 12vw, 180px)); }
/* 背景が無い場合はオーバーレイ無効化 */
.ptl-pageNavHero:not(.has-bg) .ptl-pageNavHero__overlay { display: none; }

/* --- Mobile tuning (<= 767px): ボタンを半分サイズに --- */
@media (max-width: 767px) {
    .ptl-pageNavHero .ptl-section__inner { padding-top: clamp(24px, 6vw, 32px); padding-bottom: clamp(24px, 6vw, 32px); }
    .ptl-pageNavHero__grid { row-gap: clamp(16px, 3vw, 20px); column-gap: clamp(10px, 2.4vw, 14px); }
    .ptl-pageNavHero__btn { min-height: 85px; padding: clamp(10px, 2.8vw, 14px) clamp(8px, 2.4vw, 12px); }
    .ptl-pageNavHero__icon { width: clamp(26px, 6vw, 32px); padding: 0; }
    .ptl-pageNavHero__label { font-size: clamp(11px, 2.8vw, 12px); }
    .ptl-pageNavHero__photo img { height: clamp(64px, 16vw, 80px); }
}

/* NAVIGATION 折り畳み用スタイル（SP専用） */
/* PCでは常に表示、SPでのみ折り畳み */
@media (min-width: 768px) {
  .ptl-pageNavHero__toggle {
    display: none; /* PCでは折り畳みボタンを非表示 */
  }
  .ptl-pageNavHero__grid.is-collapsible {
    height: auto !important; /* PCではグリッドを常に表示 */
    opacity: 1 !important;
    visibility: visible !important;
    transform: none !important;
    grid-template-rows: 1fr !important;
    display: grid !important;
  }
}

/* スマホ用ボタンスタイル（768px未満） */
@media (max-width: 767px) {
  .ptl-pageNavHero__toggle {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 8px auto 16px auto;
    padding: 0;
    font-size: 0.9em;
    background: transparent;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: opacity .18s;
    color: #fff;
    text-shadow: 0 1px 4px rgba(0,0,0,.25);
  }
  .ptl-pageNavHero__toggle:hover {
    opacity: .8;
  }
  .ptl-pageNavHero__toggleText {
    font-weight: 600;
    letter-spacing: .02em;
    color: inherit;
  }
  
  /* ハンバーガーアイコン（三本線） */
  .ptl-pageNavHero__toggleIcon {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 18px;
    height: 14px;
  }
  .ptl-pageNavHero__toggleIcon span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: #fff;
    transition: transform .25s ease, opacity .25s;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
  }
}

/* COMMITMENT セクション（Reasons）のボタンカスタマイズ */
.ptl-reason__btn {
  display: flex;
  flex-direction: column;
  min-height: 340px !important;
  padding: 20px !important;
  background: #fff;
  border: 1px solid rgba(0,0,0,0.08);
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.ptl-reason__btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0,0,0,0.12);
}

/* 画像エリア */
.ptl-reason__photo {
  width: calc(100% + 40px);
  margin: -20px -20px 18px -20px;
  aspect-ratio: 16/9;
  overflow: hidden;
  box-sizing: border-box;
}

.ptl-reason__photo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* タイトル */
.ptl-pageNavHero__label {
  font-size: clamp(14px, 1.5vw, 16px);
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 6px; /* 8pxから6pxに縮小 */
  color: #333;
  padding: 0 8px;
  text-transform: uppercase;
}

/* 説明文 */
.ptl-reason__subtext {
  font-size: clamp(12px, 1.3vw, 14px);
  font-weight: 400;
  color: #666;
  line-height: 1.6;
  letter-spacing: 0.01em;
  padding: 0 8px;
  margin-bottom: 8px;
}

@media (max-width: 767px) {
  .ptl-reason__btn {
    min-height: 260px !important;
  }
  .ptl-pageNavHero__label {
    font-size: 14px;
  }
  .ptl-reason__subtext {
    font-size: 12px;
    margin-bottom: 6px;
  }
}

/* PagelayerのクレジットをCSSで非表示 */
a[href*="pagelayer.com/?from=theme-credit"] {
    display: none !important;
}

/* クリックでXに変形 - SPのみ適用 */
@media (max-width: 767px) {
  [aria-expanded="true"] .ptl-pageNavHero__toggleIcon span:nth-child(1) {
    transform: translateY(5px) rotate(45deg);
  }
  [aria-expanded="true"] .ptl-pageNavHero__toggleIcon span:nth-child(2) {
    opacity: 0;
  }
  [aria-expanded="true"] .ptl-pageNavHero__toggleIcon span:nth-child(3) {
    transform: translateY(-5px) rotate(-45deg);
  }

  /* 折り畳み・展開のアニメーション */
  .ptl-pageNavHero__grid.is-collapsible {
    height: 0;
    overflow: hidden;
    display: grid;
    opacity: 0;
    transform: translateY(-10px);
    transition: height .3s ease, opacity .25s ease, transform .25s ease;
    grid-template-rows: 0fr;
    visibility: hidden;
  }

  .ptl-pageNavHero__grid.is-collapsible.is-expanded {
    height: auto;
    opacity: 1;
    transform: translateY(0);
    grid-template-rows: 1fr;
    visibility: visible;
    margin-top: 10px;
  }
}/* ===== NEWS: 白ベタを画面端まで（グローバル背景の有無に依存しない） ===== */
/* 親ラッパがfull-bleedをクリップしないように */
.l-mainContent, .l-contents, .l-container { overflow: visible; }

/* NEWS 本体の後ろに100vwの白帯を敷く（常時）。内容幅はそのまま */
#news { position: relative; z-index: 1; background: transparent; width: 100vw; margin-left: calc(50% - 50vw); margin-right: calc(50% - 50vw); display: flow-root; }
#news::before {
    content: "";
    position: absolute; inset: 0 auto 0 50%; transform: translateX(-50%);
    width: 100vw; background: #fff; z-index: -1;
    top: -2px; bottom: 0; /* extend upward to hide 1px seams */
}

/* ヒーロー直下の余白を最小化 */
.p-mainVisual { margin-bottom: 0; }

/* NEWS セクションの上下余白を COMMITMENT と同値に統一（上下同値） */
#news.ptl-section { padding-top: clamp(40px, 6vw, 80px); padding-bottom: clamp(40px, 6vw, 80px); }
/* NEWS 見出しの上側を詰めて、上下バランスを視覚的にフラット化 */
#news .ptl-section__title { margin-top: 0; }

/* 統一ルールに合わせるため、特別な詰めは撤回（既定の各セクション余白へ） */

/* --- Marquee gallery (shortcode) --- */
.ptl-marquee { position: relative; overflow: hidden; width: 100%; height: var(--height, 200px); }
.ptl-marquee__track { position: absolute; inset: 0; display: flex; align-items: center; gap: var(--gap, 24px); will-change: transform; animation: ptl-marquee var(--duration, 30s) linear infinite; }
.ptl-marquee__item { flex: 0 0 auto; height: calc(var(--height, 200px) - 8px); display: flex; align-items: center; }
.ptl-marquee__item img { height: 100%; width: auto; display: block; object-fit: cover; filter: drop-shadow(0 4px 12px rgba(0,0,0,.12)); border-radius: 6px; }
@keyframes ptl-marquee { from { transform: translateX(0); } to { transform: translateX(-50%); } }
@media (prefers-reduced-motion: reduce) { .ptl-marquee__track { animation: none; } }

/* --- SNS buttons (shortcode) --- */
.ptl-sns { display: flex; gap: 12px; justify-content: center; padding: 0; margin: 16px 0 0; list-style: none; }
.ptl-sns__btn { width: 44px; height: 44px; display: grid; place-items: center; color: #fff; background: #111; border-radius: 999px; text-decoration: none; box-shadow: 0 8px 18px rgba(0,0,0,.15); transition: transform .16s ease, background .16s ease; }
.ptl-sns__btn:hover { transform: translateY(-1px); background: #333; }
.ptl-sns__btn i { font-size: 18px; }

/* --- Bust Issues banner --- */
.ptl-bustIssues { position: relative; width: 100vw; margin-left: calc(50% - 50vw); margin-right: calc(50% - 50vw); overflow: visible; }
.ptl-bustIssues .ptl-section__inner { position: relative; padding-top: clamp(36px, 6vw, 80px); padding-bottom: clamp(24px, 5vw, 60px); }
.ptl-bustIssues__head { text-align: center; margin-bottom: clamp(12px, 3vw, 20px); }
.ptl-bustIssues .ptl-section__title { text-align: center; letter-spacing: .08em; font-weight: 600; margin-bottom: 28px; font-size: var(--ptl-heading-size); }
.ptl-bustIssues .ptl-section__subtitle { text-align: center; color: #777; margin-top: -4px; font-size: var(--ptl-subtitle-size); }
.ptl-bustIssues .ptl-section__subtitleLine {
    width: clamp(180px, 28vw, 560px);
    height: clamp(16px, 3.2vw, 28px);
    margin: 10px auto 26px;
    background: url('./img/bg_1.png') center/contain no-repeat;
}
.ptl-bustIssues__card { background: #fff; border-radius: 10px; box-shadow: 0 10px 28px rgba(0,0,0,.08); padding: clamp(16px, 2.6vw, 26px); max-width: 1160px; margin: 0 auto; }
.ptl-bustIssues__list { display: grid; grid-template-columns: 1fr; gap: 14px; margin: 0; padding: 0; list-style: none; }
@media (min-width: 900px) { .ptl-bustIssues__list { grid-template-columns: repeat(2, 1fr); } }
.ptl-bustIssues__item { display: grid; grid-template-columns: 28px 1fr; align-items: center; column-gap: 10px; padding: 10px 8px; border-bottom: 1px dashed #ddd; }
.ptl-bustIssues__check img { width: 22px; height: 22px; display: block; object-fit: contain; }
.ptl-bustIssues__text { color: #333; }

/* --- Service Feature (bust-up hero + 3 cards) --- */
.ptl-serviceFeature__hero { display: grid; gap: clamp(14px, 2vw, 24px); grid-template-columns: 1fr; align-items: center; }
@media (min-width: 980px) { .ptl-serviceFeature__hero { grid-template-columns: 6fr 5fr; } }
.ptl-serviceFeature__heroMedia { position: relative; border-radius: 12px; overflow: hidden; background: #ddd; }
.ptl-serviceFeature__heroLink { display: block; width: 100%; height: 100%; cursor: pointer; }
.ptl-serviceFeature__heroLink:focus-visible { outline: 3px solid rgba(17,17,17,.35); outline-offset: 3px; }
.ptl-serviceFeature__heroMedia img, .ptl-serviceFeature__cardMedia img { width: 100%; height: 100%; object-fit: cover; display: block; transition: transform .35s ease; }
.ptl-serviceFeature__heroBody { padding: clamp(2px, 0.8vw, 8px) clamp(6px, 1.4vw, 10px); }
.ptl-serviceFeature__title { font-size: clamp(22px, 3vw, 32px); font-weight: 700; letter-spacing: .03em; margin-bottom: 6px; }
.ptl-serviceFeature__desc { color: #555; line-height: 1.75; margin-bottom: 10px; }
.ptl-arrowLink { display: inline-grid; grid-auto-flow: column; align-items: center; gap: 8px; text-decoration: none; color: #3C4043; font-weight: 600; }
.ptl-arrowLink__arrow { display: inline-block; transform: translateX(0); transition: transform .2s ease; }
.ptl-arrowLink:hover .ptl-arrowLink__arrow, .ptl-arrowLink:focus-visible .ptl-arrowLink__arrow { transform: translateX(4px); }

.ptl-serviceFeature__grid { margin-top: clamp(18px, 3vw, 26px); display: grid; gap: clamp(14px, 2vw, 22px); grid-template-columns: 1fr; }
@media (min-width: 720px) { .ptl-serviceFeature__grid { grid-template-columns: repeat(3, 1fr); } }
.ptl-serviceFeature__card { display: grid; gap: 10px; text-decoration: none; color: inherit; background: #fff; border: 1px solid rgba(0,0,0,.06); border-radius: 10px; padding: 10px; box-shadow: 0 6px 18px rgba(0,0,0,.08); overflow: hidden; transition: transform .25s ease, box-shadow .25s ease; }
.ptl-serviceFeature__cardMedia { position: relative; display: block; border-radius: 8px; overflow: hidden; background: #e2e2e2; }
.ptl-serviceFeature__cardLabel { font-weight: 700; letter-spacing: .02em; text-align: center; padding: 2px 6px 8px; }
.ptl-serviceFeature__card:hover { transform: translateY(-2px); box-shadow: 0 10px 26px rgba(0,0,0,.12); }
.ptl-serviceFeature__card:hover img { transform: scale(1.04); }

/* generic aspect-ratio helper via CSS var (fallback safe) */
.ptl-serviceFeature__heroMedia::before,
.ptl-serviceFeature__cardMedia::before { content: ""; display: block; padding-top: calc(100% / (var(--ratio, 4/5))); }
.ptl-serviceFeature__heroMedia > img,
.ptl-serviceFeature__cardMedia > img,
.ptl-phsvg { position: absolute; inset: 0; width: 100%; height: 100%; }



