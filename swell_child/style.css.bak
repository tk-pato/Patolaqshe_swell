}

/* COMMITMENT (section-reason.php) のサブタイトル＆飾りラインをNEWSと同調 */
#reasons .ptl-section__subtitle { text-align: center; color: #777; margin-top: -4px; font-size: var(--ptl-subtitle-size); }
#reasons .ptl-section__subtitleLine {
    width: clamp(180px, 28vw, 560px);
