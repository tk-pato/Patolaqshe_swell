/* ===========================
   INTRO Section Styles - Demo Site Style
   Left image, right text layout with proper spacing
   =========================== */

/* Full-bleed container with proper spacing */
#intro {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: row; /* PC時は横並び（左画像・右テキスト） */
    align-items: stretch;
    min-height: clamp(500px, 60vh, 700px);
    /* Match other sections spacing */
    margin-top: clamp(60px, 8vw, 100px);
    margin-bottom: clamp(80px, 10vw, 120px);
}

/* Left: Media Area (Background Image) */
.ptl-intro__media {
    position: relative;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    /* デフォルト背景：グラデーション */
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    flex: 7; /* 左側: 70% */
    min-height: 100%;
}

/* 背景画像が設定されている場合のフォールバック */
.ptl-intro__media.has-background {
    background: var(--intro-bg-image, linear-gradient(135deg, #667eea 0%, #764ba2 100%));
    background-size: cover;
    background-position: center;
}

/* メディア内のコンテンツ（必要に応じて） */
.ptl-intro__media-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    padding: 40px 20px;
}

/* Right: Content Area */
.ptl-intro__content {
