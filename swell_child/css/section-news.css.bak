/* ===========================
   NEWS Section Styles
   NEWSセクション専用スタイル
   =========================== */

/* h2スタイルはstyle.cssで統一管理 */

/* ニュースリスト */
.ptl-news__list.is-titleOnly { 
    max-width: 980px; 
    margin: 0 auto; 
}





.ptl-news__list.is-titleOnly {
    max-width: 980px;
    margin: 0 auto;
}
.ptl-news__list.is-titleOnly .ptl-news__item {
    display: flex;
    align-items: center;
    gap: 32px;
    padding: 28px 0 28px 0;
    border-bottom: 1px solid #e5e5e5;
    font-size: 1.25rem;
}

.ptl-news__date {
    min-width: 120px;
    color: #5F6368;
    font-weight: 400;
    letter-spacing: 0.04em;
    text-align: right;
    font-size: 1.25rem;
}
.ptl-news__title {
    flex: 1;
    color: #5F6368;
    font-weight: 400;
    letter-spacing: 0.01em;
    word-break: break-word;
    font-size: 1.25rem;
    text-align: left;
}
.ptl-news__title a {
    color: inherit;
    text-decoration: none;
}
.ptl-news__title a:hover {
    color: #bfa18c;
}

@media (max-width: 900px) {
    .ptl-news__list.is-titleOnly .ptl-news__item {
        font-size: clamp(14px, 2.2vw, 16px);
        padding: 18px 0 18px 0;
        gap: 18px;
    }
    .ptl-news__date,
    .ptl-news__title {
        font-size: clamp(14px, 2.2vw, 16px);
    }
}

.ptl-news__date {
    min-width: 160px;
    color: #6c3a3a;
    font-weight: 500;
    font-family: 'Montserrat', '游ゴシック', 'YuGothic', 'Meiryo', sans-serif;
    letter-spacing: 0.04em;
    text-align: right;
}

.ptl-news__title {
    flex: 1;
    color: #3c2222;
    font-weight: 700;
    letter-spacing: 0.01em;
    word-break: break-word;
    font-size: 1.35rem;
}
.ptl-news__title a {
    color: inherit;
    text-decoration: none;
}
.ptl-news__title a:hover {
    color: #bfa18c;
}

/* ニュースタイトル */
.ptl-news__title { 
    text-decoration: none; 
    font-weight: 700; 
    letter-spacing: .01em; 
    color: #5F6368; 
}

.ptl-news__title:hover,
.ptl-news__title:focus-visible { 
    color: #3C4043; 
}