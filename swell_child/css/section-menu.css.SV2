/* ===========================
   MENU Section (Rococo Style)
   メニューセクション - rococoサイト完全再現版
   =========================== */

.ptl-menu {
  padding: 60px 0;
  background-color: #fff;
}

.ptl-menu .ptl-section__inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* セクションタイトル */
.ptl-menu__header {
  text-align: center;
  margin-bottom: 50px;
}

.ptl-menu__title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.1em;
  margin: 0;
  text-transform: uppercase;
}

/* メインコンテンツエリア */
.ptl-menu__content {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 40px;
  align-items: stretch;
}

/* メインコンテンツ */
.ptl-menu__main {
  position: relative;
  height: 100%;
}

.ptl-menu__mainContent {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.ptl-menu__mainContent:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.ptl-menu__mainLink {
  display: block;
  text-decoration: none;
  color: inherit;
}

.ptl-menu__mainImage {
  position: relative;
  width: 100%;
  height: 400px;
  overflow: hidden;
}

.ptl-menu__mainImage img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.ptl-menu__mainContent:hover .ptl-menu__mainImage img {
  transform: scale(1.05);
}

.ptl-menu__mainText {
  padding: 20px 30px;
  background: #fff;
}

.ptl-menu__mainTitle {
  font-size: 1.5rem;
  font-weight: 700;
  color: #333;
  margin: 0 0 15px 0;
  line-height: 1.3;
}

.ptl-menu__mainDesc {
  font-size: 1rem;
  color: #666;
  line-height: 1.6;
  margin: 0 0 20px 0;
}

.ptl-menu__mainCta {
  display: inline-block;
  padding: 0;
  background: transparent;
  color: #007bff;
  border: none;
  border-radius: 0;
  font-size: 1rem;
  font-weight: 600;
  text-transform: none;
  letter-spacing: normal;
  transition: color 0.3s ease;
  text-decoration: underline;
}

.ptl-menu__mainCta:hover {
  color: #0056b3;
}

/* サブメニュー */
.ptl-menu__sub {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.ptl-menu__subGrid {
  display: flex;
  flex-direction: column;
  gap: 20px;
  height: 100%;
}

.ptl-menu__subItem {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ptl-menu__subItem:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
}

.ptl-menu__subLink {
  display: flex;
  flex-direction: column;
  text-decoration: none;
  color: inherit;
  height: 100%;
}

.ptl-menu__subImage {
  position: relative;
  width: 100%;
  height: 150px;
  overflow: hidden;
  flex-shrink: 0;
}

.ptl-menu__subImage img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.ptl-menu__subItem:hover .ptl-menu__subImage img {
  transform: scale(1.1);
}

.ptl-menu__subTitle {
  padding: 20px;
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  margin: 0;
  text-align: center;
  background: #fff;
  transition: background 0.3s ease;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ptl-menu__subItem:hover .ptl-menu__subTitle {
  background: #f8f9fa;
}

/* MORE ボタン */
.ptl-menu__more {
  text-align: center;
  margin-top: 50px;
}

.ptl-menu__moreBtn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 15px 30px;
  background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
  color: #fff;
  border-radius: 30px;
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
}

.ptl-menu__moreBtn:hover {
  background: linear-gradient(135deg, #1e7e34 0%, #155724 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
  color: #fff;
  text-decoration: none;
}

.ptl-menu__moreLabel {
  font-weight: 600;
}

.ptl-menu__moreArrow {
  font-size: 1.2rem;
  transition: transform 0.3s ease;
}

.ptl-menu__moreBtn:hover .ptl-menu__moreArrow {
  transform: translateX(5px);
}

/* ===========================
   レスポンシブデザイン
   =========================== */

/* タブレット */
@media (max-width: 992px) {
  .ptl-menu {
    padding: 50px 0;
  }
  
  .ptl-menu__content {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .ptl-menu__subGrid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }
  
  .ptl-menu__title {
    font-size: 2.2rem;
  }
}

/* スマートフォン */
@media (max-width: 768px) {
  .ptl-menu {
    padding: 40px 0;
  }
  
  .ptl-menu .ptl-section__inner {
    padding: 0 15px;
  }
  
  .ptl-menu__header {
    margin-bottom: 40px;
  }
  
  .ptl-menu__title {
    font-size: 1.8rem;
  }
  
  .ptl-menu__content {
    gap: 25px;
  }
  
  .ptl-menu__subGrid {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .ptl-menu__mainImage {
    height: 200px;
  }
  
  .ptl-menu__mainText {
    padding: 20px;
  }
  
  .ptl-menu__mainTitle {
    font-size: 1.3rem;
  }
  
  .ptl-menu__mainDesc {
    font-size: 0.9rem;
  }
  
  .ptl-menu__subImage {
    height: 100px;
  }
  
  .ptl-menu__subTitle {
    padding: 12px 15px;
    font-size: 0.9rem;
  }
  
  .ptl-menu__more {
    margin-top: 40px;
  }
  
  .ptl-menu__moreBtn {
    padding: 12px 25px;
    font-size: 1rem;
  }
}

/* 小画面スマートフォン */
@media (max-width: 480px) {
  .ptl-menu {
    padding: 30px 0;
  }
  
  .ptl-menu__title {
    font-size: 1.5rem;
  }
  
  .ptl-menu__mainImage {
    height: 180px;
  }
  
  .ptl-menu__mainText {
    padding: 15px;
  }
  
  .ptl-menu__mainTitle {
    font-size: 1.2rem;
  }
  
  .ptl-menu__subImage {
    height: 80px;
  }
  
  .ptl-menu__subTitle {
    padding: 10px 12px;
    font-size: 0.85rem;
  }
}